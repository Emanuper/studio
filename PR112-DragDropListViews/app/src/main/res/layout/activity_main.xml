<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:padding="@dimen/activity_padding"
    tools:context="com.example.es.iessaladillo.pedrojoya.pr112.MainActivity">

    <ListView
        android:id="@+id/lst1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:layout_marginRight="@dimen/lst_margin"
        android:layout_marginEnd="@dimen/lst_margin"
        android:paddingBottom="@dimen/lst_padding"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lst2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/lst_margin"
        android:layout_marginStart="@dimen/lst_margin"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/lst_padding"
        android:layout_height="match_parent" />

</LinearLayout>