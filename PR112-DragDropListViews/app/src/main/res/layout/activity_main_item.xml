<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:padding="@dimen/item_padding"
    android:background="@color/item_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgIcono"
        android:layout_gravity="center"
        android:layout_width="@dimen/icono_height"
        android:layout_marginRight="@dimen/icono_margen"
        android:src="@android:drawable/ic_menu_agenda"
        android:layout_height="@dimen/icono_height" />

    <TextView
        android:id="@+id/lblTexto"
        android:layout_gravity="center"
        tools:text="alert"
        android:layout_width="wrap_content"
        android:textSize="@dimen/texto_size"
        android:layout_height="wrap_content" />

</LinearLayout>