<resources>

    <!-- Tema base de la aplicación. Debe heredar de Theme.AppCompat -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Color de la ActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Color de la barra de notificaciones -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Color de acento (contraste) -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema para la Toolbar. Debe heredar de ThemeOverlay.AppCompat  -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Color principal del texto -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Color secundario de texto (icono de navegación y overflow) -->
        <item name="android:textColorSecondary">@color/textColorSecundary</item>
    </style>

    <!-- Estilo para el spinner de la toolbar -->
    <style name="SpinnerTheme" parent="Theme.AppCompat.Light">
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemStyle</item>
    </style>
    <style name="SpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">

    </style>

</resources>